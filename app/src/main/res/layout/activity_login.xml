<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/viewb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/background_shape"
        android:layout_below="@+id/imageView2">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="基本設定"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="身分證號碼 : "
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            android:layout_toStartOf="@+id/button_login"
            android:layout_marginLeft="10dp"
            android:layout_alignEnd="@+id/textView16" />

        <EditText
            android:id="@+id/id_no"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:capitalize="characters"
            android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="15"
            android:gravity="center"
            android:text="A123456789"
            android:hint="A123456789"
            android:maxLength="10"
            android:password="true"
            android:textSize="20dp"
            android:layout_alignTop="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

        <TextView
            android:id="@+id/editRegisterId"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_above="@+id/button_login"
            android:layout_alignStart="@+id/textView21"
            android:layout_below="@+id/textView21" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="身分證第一個字請輸入英文大寫"
            android:layout_below="@+id/id_no"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView7" />

        <!--TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="請輸入您的生日"
            android:textColor="#000000"
            android:id="@+id/textView10"
            android:textSize="20dp"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/bir_no"
            android:layout_marginTop="50dp"/>
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/id_no"

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bir_no"
            android:ems="15"
            android:hint="0360306"

            android:layout_below="@+id/textView10"
            android:layout_alignStart="@+id/textView7" /-->


        <Button
            android:id="@+id/button_login"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/botton_home"
            android:textSize="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/editRegisterId" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="姓           名 : "
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/textView14"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView11"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/textView15"
            android:layout_alignBottom="@+id/textView14"
            android:gravity="center"
            android:layout_alignStart="@+id/textView11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生           日 : "
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/textView16"

            android:layout_below="@+id/textView14"
            android:layout_alignStart="@+id/textView14"
            android:layout_marginTop="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="病 歷 號 碼 : "
            android:id="@+id/textView17"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/textView16"
            android:layout_alignStart="@+id/textView16"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/textView19"
            android:gravity="center"
            android:layout_alignBaseline="@+id/textView16"
            android:layout_alignBottom="@+id/textView16"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView16" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/textView20"
            android:gravity="center"
            android:layout_alignBottom="@+id/textView17"
            android:layout_toEndOf="@+id/textView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="Register Id : "
            android:id="@+id/textView21"
            android:layout_below="@+id/textView17"
            android:layout_alignEnd="@+id/textView17"
            android:layout_marginTop="14dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:background="@drawable/botton_login"
            android:id="@+id/button"
            android:layout_toStartOf="@+id/textView8"
            android:layout_alignEnd="@+id/textView21"
            android:layout_alignTop="@+id/button_login" />


    </RelativeLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:src="@drawable/pic_app"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/relativeLayout" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView3"
        android:src="@drawable/pic_logo"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/relativeLayout" />

</RelativeLayout>
